<?xml version="1.0"?>
<project name="toucan" basedir="." default="compile">

  <property name="src.dir" value="TillApp/src"/>
  <property name="lib.dir" value="TillApp/lib"/>
  <property name="build.dir" value="TillApp/bin"/>
  <property name="test.dir" value="TillApp/test"/>

  <path id="project.classpath">
    <pathelement location="${build.dir}"/>
    <pathelement location="${lib.dir}/sql2o-1.5.4.jar"/>
    <pathelement location="${lib.dir}/sqlite-jdbc-3.16.1.jar"/>
  </path>

  <path id="test.classpath">
    <pathelement location="${build.dir}"/>
    <pathelement location="${lib.dir}/junit-4.12.jar"/>
    <pathelement location="${lib.dir}/hamcrest-core-1.3.jar"/>
  </path>


  <target name="init">
    <mkdir dir="${build.dir}"/>
  </target>

  <target name="compile" depends="init" description="Compile source code">
    <javac srcdir="${src.dir}" destdir="${build.dir}"
      includeantruntime="false">
      <classpath refid="project.classpath"/>
    </javac>
    <javac srcdir="${test.dir}" destdir="${build.dir}"
      includeantruntime="false">
      <classpath refid="test.classpath"/>
    </javac>
  </target>

  <target name="test" depends="compile" description="Run unit tests">
    <junit fork="true">
      <classpath refid="test.classpath"/>
      <formatter type="brief" usefile="false"/>
      <test name="TillApp/test/MovieTest"/>
      <test name="TillApp/test/OrderTest"/>
      <test name="TillApp/test/ScreeningTest"/>
      <test name="TillApp/test/SeatTest"/>
      <test name="TillApp/test/TicketTest"/>
    </junit>
  </target>

  <target name="clean" description="Remove compiled code">
    <delete dir="${build.dir}"/>
    <delete dir="out"/>
  </target>

</project>
